<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="75dp"
    app:layout_behavior="@string/app_name"
    tools:context=".MainActivity">


    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Usuario"
        android:ems="10"
        android:id="@+id/editText3"
        android:autofillHints="" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Clave"
        android:ems="10"
        android:id="@+id/editText4"/>
    <Button
        android:text="Entrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="launchMenuActivity"
        android:background="@color/colorPrimary"
        android:textColor="#EDE7F6"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/registrar_usuario"
        android:layout_gravity="center"
        android:ems="10"
        android:id="@+id/button2"
        android:onClick="launchRegistroActivity"
        android:backgroundTint="@color/colorPrimaryDark"
        android:drawableEnd="@color/colorPrimary"
        android:drawableTint="#00C2AC1A"
        android:textColor="#E8EAF6"/>


</LinearLayout>